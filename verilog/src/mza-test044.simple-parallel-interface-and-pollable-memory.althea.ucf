net led_0 loc=p12 | iostandard=lvcmos25;
net led_1 loc=p11 | iostandard=lvcmos25;
net led_2 loc=p10 | iostandard=lvcmos25;
net led_3 loc=p9  | iostandard=lvcmos25;
